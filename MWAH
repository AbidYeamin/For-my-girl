    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Will You Be My Valentine?</title>
    <style>
        body {
            text-align: center;
            background-color: pink;
            font-family: 'Arial', sans-serif;
            overflow: hidden;
        }
        .container {
            margin-top: 100px;
        }
        h1 {
            color: red;
            font-size: 3em;
        }
        .custom-image {
            width: 200px;
            height: auto;
            animation: heartbeat 1s infinite alternate;
        }
        @keyframes heartbeat {
            0% { transform: scale(1); }
            100% { transform: scale(1.2); }
        }
        .btn {
            font-size: 1.5em;
            padding: 10px 20px;
            margin: 20px;
            border: none;
            cursor: pointer;
            border-radius: 10px;
        }
        .yes {
            background-color: red;
            color: white;
        }
        .no {
            background-color: white;
            color: red;
            position: absolute;
        }
        .love-message {
            margin-top: 30px;
            font-size: 1.5em;
            color: darkred;
        }
        #confetti {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <audio id="loveSong" src="your-song.mp3"></audio>
    <canvas id="confetti"></canvas>
    <div class="container">
        <h1>Will You Be My Valentine? ‚ù§Ô∏è</h1>
        <img src="your-image-url.jpg" alt="Custom Image" class="custom-image">
        <button class="btn yes" onclick="yesClicked()">Yes</button>
        <button class="btn no" id="noButton" onmouseover="moveNoButton()">No</button>
        <div class="love-message">You mean the world to me! üíï</div>
        <div id="countdown"></div>
    </div>
    
    <script>
        function yesClicked() {
            alert("Yay! I love you! üíñ");
            document.getElementById("loveSong").play();
            startConfetti();
        }

        function moveNoButton() {
            let button = document.getElementById("noButton");
            let x = Math.random() * window.innerWidth * 0.8;
            let y = Math.random() * window.innerHeight * 0.8;
            button.style.left = `${x}px`;
            button.style.top = `${y}px`;
        }

        function startConfetti() {
            const canvas = document.getElementById("confetti");
            const ctx = canvas.getContext("2d");
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            const confettiPieces = Array.from({ length: 100 }, () => ({
                x: Math.random() * canvas.width,
                y: Math.random() * canvas.height,
                r: Math.random() * 6 + 2,
                d: Math.random() * 10 + 2,
            }));
            function draw() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                confettiPieces.forEach(p => {
                    ctx.beginPath();
                    ctx.arc(p.x, p.y, p.r, 0, Math.PI * 2);
                    ctx.fillStyle = `hsl(${Math.random() * 360}, 100%, 50%)`;
                    ctx.fill();
                    p.y += p.d;
                    if (p.y > canvas.height) p.y = 0;
                });
                requestAnimationFrame(draw);
            }
            draw();
        }

        function updateCountdown() {
            const valentineDate = new Date("February 14, 2025 00:00:00").getTime();
            const now = new Date().getTime();
            const distance = valentineDate - now;
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            document.getElementById("countdown").innerHTML = `Countdown to our special day: ${days} days left! ‚ù§Ô∏è`;
        }
        setInterval(updateCountdown, 1000);
    </script>
</body>
</html>
